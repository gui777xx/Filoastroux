@Model List<astrologia>
@{
    ViewData["Title"] = "Home";
    var tipos = (List<Tipo>)ViewData["Tipos"];
    string Cor(string nome)
    {
        return tipos
            .Where(t => t.Nome == nome)
            .Select(t => t.Cor)
            .FirstOrDefault();
    }
}

<section class="pt-5 pb-3 text-center container bg-dark">
            <div class="row">
                <div class="col mx-auto text-light">
                    <h1>Astrologia</h1>
                    <div class="group">
                        <button id="btn-all" class="btn btn-md my-2 text-white bg-secondary bg-danger btn-filter">
                            Ver Todos
                        </button>
                        @foreach (var tipo in tipos)
                        {
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:@tipo.Cor">@tipo.Nome
                            </button>
                        }
                    </div>
                </div>
            </div>
</section>

    <div class="album py-5 ">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

                    @foreach (var astrologia in Model)
                    {
                    <!-- Card Pokemon - Inicio -->
                    <div class="col" onclick="window.location = '/home/Details/@astrologia.Numero'">
                        <div class="card shadow-sm cursor-pointer @string.Join(' ',astrologia.Tipo)">
                            <img src="@astrologia.Imagem" class="card-img-top" width="100%" height="320" alt="@astrologia.Nome" />
                            <div class="card-body bg-dark">
                                <p class="card-text mb-0">Nº @astrologia.Numero.ToString("000")</p>
                                <h3 class="card-title text-light">@astrologia.Nome</h3>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group bg-dark">
                                        @foreach (var tipo in astrologia.Tipo)
                                        {
                                            <a href="#" class="btn my-2  text-white"
                                                style="background-color:@Cor(tipo)">@tipo</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Card Pokemon - Fim -->
                    }

                    <div id="zeroPokemon" class="col-lg-12 text-center" hidden>
                        <h1 class="my-3 text-danger">Nenhum Pokemon Encontrado</h1>
                    </div>
                </div>


            </div>
        </div>
